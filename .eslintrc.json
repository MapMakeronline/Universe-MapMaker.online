{
  "extends": ["next/core-web-vitals", "plugin:boundaries/recommended"],
  "plugins": ["boundaries"],
  "settings": {
    "boundaries/elements": [
      {
        "type": "app",
        "pattern": "app/**/*"
      },
      {
        "type": "components",
        "pattern": "src/components/**/*"
      },
      {
        "type": "state",
        "pattern": "src/state/**/*"
      },
      {
        "type": "modules",
        "pattern": "src/modules/**/*"
      },
      {
        "type": "lib",
        "pattern": "src/lib/**/*"
      }
    ],
    "boundaries/ignore": ["**/*.test.*", "**/*.spec.*"]
  },
  "rules": {
    "boundaries/element-types": [
      "error",
      {
        "default": "disallow",
        "rules": [
          {
            "from": "app",
            "allow": ["components", "state", "modules", "lib"]
          },
          {
            "from": "components",
            "allow": ["components", "state", "lib"]
          },
          {
            "from": "state",
            "allow": ["lib"]
          },
          {
            "from": "modules",
            "allow": ["lib"]
          }
        ]
      }
    ]
  }
}
