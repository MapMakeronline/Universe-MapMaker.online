{
  "name": "universe-mapmaker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "npm run kill-port-3000 && next dev",
    "kill-port-3000": "powershell -Command \"$port = Get-NetTCPConnection -LocalPort 3000 -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess -Unique; if ($port) { Stop-Process -Id $port -Force }\"",
    "lint": "next lint",
    "start": "node server.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "screenshot": "playwright test tests/e2e/screenshot-tool.spec.ts --project=chromium",
    "analyze": "cross-env ANALYZE=true next build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mapbox/mapbox-gl-draw": "^1.5.0",
    "@mapbox/mapbox-gl-geocoder": "^5.1.2",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@react-oauth/google": "^0.12.2",
    "@reduxjs/toolkit": "^2.9.0",
    "@turf/length": "^7.2.0",
    "@turf/turf": "^6.5.0",
    "jspdf": "^3.0.3",
    "jszip": "^3.10.1",
    "mapbox-gl": "^3.0.0",
    "next": "^15.5.4",
    "proj4": "^2.19.10",
    "react": "^19",
    "react-dom": "^19",
    "react-draggable": "^4.5.0",
    "react-map-gl": "^7.1.9",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@next/bundle-analyzer": "^15.5.5",
    "@playwright/test": "^1.56.0",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-onboarding": "^9.1.13",
    "@storybook/addon-vitest": "^9.1.13",
    "@storybook/nextjs-vite": "^9.1.13",
    "@types/geojson": "^7946.0.16",
    "@types/mapbox__mapbox-gl-draw": "^1.4.9",
    "@types/mapbox__mapbox-gl-geocoder": "^5.0.0",
    "@types/mapbox-gl": "^3.1.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/turf": "^3.5.32",
    "@vitest/browser": "^4.0.1",
    "@vitest/coverage-v8": "^4.0.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-storybook": "^9.1.13",
    "playwright": "^1.56.0",
    "storybook": "^9.1.13",
    "typescript": "^5",
    "vitest": "^4.0.1"
  }
}
